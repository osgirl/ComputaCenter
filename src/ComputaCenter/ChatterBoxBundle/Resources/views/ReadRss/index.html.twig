{% extends 'ChatterBoxBundle::admin.html.twig' %}
{% block adminArea %}
<div class="row-fluid">
    <div class="span12">
        <div class="widget-box">
            <div class="widget-title">
								<span class="icon">
									<i class="icon-th"></i>
								</span>
                <h5>RSS CRUD</h5>
            </div>
            <div class="widget-content nopadding tab-content">
                <table class="table table-bordered table-striped table-hover">
                    <thead>
                    <tr>
                        <th>CRUD</th>
                        <th>RSS Name</th>
                        <th>RSS Link</th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <form action="/web/readrss/create" method="GET">
                            <td><button type="submit" class="btn btn-primary"><i class="icon-plus icon-white"></i></button></td>
                            <td><input name="rssName" type="text" placeholder="e.g. yahoo" /></td>
                            <td><input name="rssLink" type="text" placeholder="e.g. http://www.yahoo.co.uk/rss" /></td>
                            </form>
                        </tr>
                        {% for rssItem in rssEntities %}
                        <tr>
                            <td><a href="/web/readrss/delete?rssId={{ rssItem.id }}" class="btn btn-danger"><i class="icon-remove icon-white"></i></a></td>
                            <td>{{ rssItem.name }}</td>
                            <td>{{ rssItem.link }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock adminArea %}
